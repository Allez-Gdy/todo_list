  }*/
.sub-list {
  padding-left: 100rpx;
}
.sub-list .sub-list-item {
  height: 80rpx;
  align-items: center;
}
.sub-list .sub-list-item .sub-btn {
  width: 70rpx;
  text-align: center;
}
.sub-list .sub-list-item .sub-title {
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}
