.r {
  transform: rotate(-90deg);
}
.user-top {
  display: flex;
  padding: 0 25px;
}
.user-top .avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20px;
  background-color: antiquewhite;
}
.user-top .avatar img {
  width: 100%;
  height: 100%;
}
.user-top .user-name {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.user-fun-list {
  background-color: #fff;
  margin: 20px;
  border-radius: 10px;
  padding: 0 15px;
}
.user-fun-list .fun-item {
  display: flex;
  height: 60px;
  line-height: 60px;
  color: #414141;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}
.user-fun-list .fun-item .fun-title {
  flex: 1;
  margin: 0 17px;
}
.logout {
  text-align: center;
  padding: 20px;
  background-color: #fff;
  margin: 0 20px;
  color: red;
  border-radius: 10px;
}
